/* pages/settle/settle.wxss */
page,.pages{
  height: 100%;
  background: #ebebeb;
}
/*头部*/
.settleHead{
  height: 85rpx;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  color: #808080;
  padding-left: 35rpx;
  font-size: 36rpx;
  border-bottom: 1px solid #d6d4d4;
  background: #fff;
}
/*已选菜品*/
.foodList{
  height: 90rpx;
  font-size: 28rpx;
  color: #454545;
  padding:0 30rpx;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}
/*优惠活动*/
.activity{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  background: #fff;
}
.actl{
  font-size: 24rpx;
  color: #454545;
  height: 55rpx;
  width: 90%;
  padding-left: 30rpx;
  border-bottom: 1px solid #f1f1f1;
}
.actr{
  width: 22rpx;
  position: absolute;
  right: 10rpx;
  bottom: -10rpx
}
.total{
  height: 80rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
/*就餐方式*/
.waylist {
  background: #fff;
  padding:0 30rpx 25rpx;
  margin-top: 24rpx;
}

.waylist .title {
  font-size: 12px;
  margin-bottom: 12rpx;
  color: #717070;
  height: 70rpx;
  line-height: 70rpx;
}
.way {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
}

.way .ts {
  border: 1px solid #d4d4d4;
  border-radius: 5px 0 0 5px;
}

.way .wd {
  border: 1px solid #d4d4d4;
  border-left: 1px solid transparent;
  border-radius: 0 5px 5px 0;
  margin-left: -1px;
}

.way .pic {
  margin-right: 6rpx;
}

.way .ts, .way .wd {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#808080;
}

.way .ts.on, .way .wd.on {
  color: #d93035;
  border-color: #d93035;
}

.way image {
  width: 42rpx;
  display: block;
}
/*就餐方式*/
.jslist {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin-top: 20rpx;
  height: 100rpx;
  padding: 0 30rpx;
  color: #808080;
  font-size: 28rpx;
}
.lxL{
  width: 25%;
}
.lxR{
  width: 75%;
  height: 100rpx;
  line-height: 100rpx;
}
/*底部浮动*/
.cart-tab-wrp {
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background: #5a5a5a;
  display: flex;
  flex-direction: row;
  width: 100%;
  z-index: 10;
  color: black;
  /*display:none;*/
}

.cart-item-total {
  padding-left: 30rpx;
}

.cart-item-icon-wrp {
  width: 110rpx;
  height: 90rpx;
  position: absolute;
  top: -4rpx;
}

.cart-item-icon {
  width: 90rpx;
  height: 90rpx;
}

.cart-item-total-num {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  font-size: 22rpx;
  color: white;
  line-height: 36rpx;
  border-radius: 36rpx;
  text-align: center;
  position: absolute;
  right: 2rpx;
  background: #fe7820;
}

.cart-item-total-price {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  font-size: 42rpx;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
}

.cart-tab-item-btn {
  width: 200rpx;
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 14px;
  border-radius: 0;
  background: #e4333d;
  color: #fff;
  float: right;
  text-align: center;
  white-space:nowrap;
}

.cart-tab-item {
  width: 375rpx;
  color: #fff;
}