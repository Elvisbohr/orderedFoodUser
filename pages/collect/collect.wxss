/* pages/collect/collect.wxss */
/*店铺*/
page,.pages{
  width: 100%;
  height: 100%;
  background: #efefef;
}
view{  
    box-sizing: border-box;  
}
.shopCont{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  
  padding: 10rpx 15rpx;
  background: #fff;
}
.shopleft{
  width: 146rpx;
  height: 146rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}
.shopRight{
  width: 70%;
  margin-left: 35rpx;
}
.shopsite{
  font-size: 24rpx;
  color: #666666;
}
.shopselect{
  display: -webkit-inline-flex;
  display: flex;
  margin: 16rpx 0;
   font-size: 24rpx;
}
.select{
  color: #fff;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  margin-right:16rpx;
}
.shopname{
  font-size: 30rpx;
}
.onOpen{
  background: #22ac38;
}
.onOff{
  background: #e64340;
}
.onDown{
  background: #e64340
}
/* 代金券 */
.onChit{
  background: #ff8688;
}
.onMinus{
  background: #fbaf33;
}
.onDiscount{
  background: #6dd36b;
}
/*店铺End*/
/*删除*/
.collect{  
    position: relative;  
    border-top: 2rpx solid #eee;  
    height: 170rpx;
    margin-top: 14rpx;
    box-sizing: border-box;
    overflow: hidden;  
}
.inner{  
    position: absolute;  
    top:0;  
}  
.inner.txt{  
    background-color: #fff;  
    width: 100%;  
    z-index: 5;   
    transition: left 0.2s ease-in-out;  
    white-space:nowrap;  
    overflow:hidden;  
    text-overflow:ellipsis;  
}
.inner.del{  
    background-color: #e64340;  
    width: 180rpx;
    text-align: center;  
    height: 165rpx;
    line-height: 165rpx;
    z-index: 4;  
    right: 0;  
    color: #fff  
}  
/* 没有收藏店铺 */
.none{
  width: 100%;
  height: 100%;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.nsc{
  width: 140rpx;
}
.ntit{
  margin-top: 35rpx;
  color: #c0c0c0;
  font-size: 32rpx;
}
.km{
  padding-left: 16rpx; 
}
.Itemsaddres{
  width: 75%;
  display: inline-block;
  overflow: hidden;
  text-overflow:ellipsis;
}