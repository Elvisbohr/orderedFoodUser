    <scroll-view scroll-y style="width:100%;height:{{mainHieght}}px;">
    
    <navigator url="../menu/menu" class="shopCont inner txt"  bindtouchstart="touchS" bindtouchmove="touchM" bindtouchend="touchE" bindtap="shopnav" data-index="{{index}}" style="{{item.txtStyle}}" >
      <view class="shopleft">
        <image mode="widthFix" src="../../images/shopmode.png"></image>
      </view>
      <view class="shopRight">
        <view class="shopname">店铺名称</view>
        <view class="shopselect">
          <view class="select onOpen">营业中</view>
