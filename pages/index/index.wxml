<!--index.wxml-->
<view class="pages">
  <!--头部导航-->
  <view class="navHead">
    <!--选择城市-->
    <view class="city" bindtap="city">
      <text>{{city}}</text>
      <image class="arrowsDown" mode="widthFix" src="../../images/arrowsDown.png"></image>
    </view>
    <!--选择城市End-->
    <!--搜索栏-->
    <view class="importCity">
      <icon size="12" type="search" bindtap="tapSearchIcon" />
      <input value="{{searchTerm}}" placeholder="请输入搜索地址或店铺名称" bindinput="bindInput" bindblur="blurInput" />
    </view>
    <!--搜索栏End-->
  </view>
  <!--头部导航End-->
  <!--轮播图-->
  <swiper class="banner" autoplay="{{autoplay}}">
    <block wx:for="{{bannerUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <!--轮播图End-->
  <!--店铺展示-->
