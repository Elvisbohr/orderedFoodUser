/**index.wxss**/
/*头部导航*/
page{
  width: 100%;
  height: 100%;
}
.pages{
  height: 100%;
  background: #f8f8f8;
}
.navHead {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  background: #e23237;
  padding: 16rpx 50rpx;
}
.city {
  height: 43px;
  line-height: 43px;
  display: flex;
  align-items: center;
  flex-shrink: 0;
  border-radius: 5px;
  margin-right: 20rpx;
  color: #fff;
}
.arrowsDown {
  width: 25rpx;
  margin-left: 10rpx;
}
.importCity {
  display: flex;
  /*justify-content: center;*/
  align-items: center;
  height: 60rpx;
  padding: 0 30rpx;
  border: 1px solid #e1e1e1;
  border-radius: 30px;
  width: 90%;
  font-size: 24rpx;
  background: #fff;
}
.importCity input {
  padding-left: 20rpx;
  width: 90%;
}
.subTime{
  color:#d02132;
  font-size: 34rpx;
}
/*头部导航End*/
/*轮播图*/
.banner {
  width: 100%;
  height: 190px;
  overflow: hidden;
}
.slide-image {
  width: 100%;
  height: 100%;
}
/*轮播图End*/
/*店铺*/
view{  
    box-sizing: border-box;  
}
.shopCont{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 18rpx 15rpx;
  background: #fff;
}
.shopleft{
  width: 146rpx;
  height: 146rpx;
}
.shopRight{
  margin-left: 35rpx;
}
.shopname{
  font-size: 30rpx
}
.shopsite{
  font-size: 24rpx;
  color: #666666;
}
.shopselect{
  display: -webkit-inline-flex;
  display: flex;
  margin: 18rpx 0;
  font-size: 24rpx;
}
.select{
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;

}
/* 营业中 */
.onOpen{
  background: #22ac38;
}
.onff{
  background: #d02132;
}
/* 代金券 */
.onChit{
  background: #ff8688;
}
.onMinus{
  background: #fbaf33;
}
.onDiscount{
  background: #6dd36b;
}
.km{
  padding-left: 16rpx; 
}
/*店铺End*/