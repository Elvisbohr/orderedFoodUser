/**index.wxss**/
/*头部导航*/
page{
  width: 100%;
  height: 100%;
}
.pages{
  height: 100%;
  background: #f8f8f8;
}
.navHead {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  background: #e23237;
  padding: 16rpx 3%;
  justify-content: space-between
}
.city {
  height: 43px;
  line-height: 43px;
  display: flex;
  align-items: center;
  flex-shrink: 0;
  border-radius: 5px;
  margin-right: 20rpx;
  color: #fff;
}
.arrowsDown {
  width: 25rpx;
  margin-right: 10rpx;
}
.sweep{
  margin-left: 20rpx;
  width: 50rpx;
  flex-shrink: 0;
  height: 50rpx; 
}
.importCity {
  display: flex;
  /*justify-content: center;*/
  align-items: center;
  height: 60rpx;
  padding: 0 30rpx;
  border: 1px solid #e1e1e1;
  border-radius: 30px;
  width: 90%;
  font-size: 24rpx;
  background: #fff;
}
.importCity input {
  padding-left: 20rpx;
  width: 90%;
}
.subTime{
  color:#d02132;
  font-size: 34rpx;
}
/*头部导航End*/
/*轮播图*/
.banner {
  width: 100%;
  height: 190px;
  overflow: hidden;
}
.slide-image {
  width: 100%;
  height: 100%;
}
/*轮播图End*/
/*店铺*/
view{  
    box-sizing: border-box;  
}
.shopCont{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 18rpx 15rpx;
  background: #fff;
}
.shopCont:first-of-type{
  margin-top: 0;
}
.shopleft{
  width: 146rpx;
  height: 146rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}
.shopRight{
  width: 78%;
  margin-left: 35rpx;
}
.shopname{
  font-size: 30rpx
}
.shopsite{
  font-size: 24rpx;
  color: #666666;
}
.Itemsaddres{
  width: 75%;
  display: inline-block;
  overflow: hidden;
  text-overflow:ellipsis;
}
.shopselect{
  display: -webkit-inline-flex;
  display: flex;
  margin: 18rpx 0;
  font-size: 24rpx;
}
.select{
  color: #fff;
  border-radius: 8rpx;
  margin-right: 16rpx;
  text-align: center;
}
/* 营业中 */
.onOpen{
  background: #22ac38;
   padding: 2rpx 10rpx;
}
.onff{
  background: #d02132;
   padding: 2rpx 10rpx;
}
/* 代金券 */
.onChit{
  width: 22px;
  background: #ff8688;
}
.onMinus{
  width: 22px;
  background: #fbaf33;
}
.onDiscount{
  width: 22px;
  background: #6dd36b;
}
.km{
  padding-left: 16rpx; 
}
/*店铺End*/
/* 加载更多 */
.loadMore{
  text-align: center;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
  font-size: 14px;
  color: #666666;
}
/* 加载更多End */